<%- include('../partials/header') %>

<section id="show-page">
  <div>Title: </div>
  <div><%= restaurant.title %></div>
  <div>Release Year: </div>
  <div><%= restaurant.location %></div>
  <div>Rating: </div>
  <div><%= restaurant.price %></div>
  <div>Now Showing: </div>
  <div><%= restaurant.img ? 'Yes' : 'Nope' %></div>
  <div>Cast:</div>
  <ul>
    <%- restaurant.cast.map(p => 
      `<li>${p.name} <small>${p.born.toLocaleDateString()}</small></li>`
    ).join('') %>
  </ul>
</section>
<form id="add-per-to-cast" action="/restaurants/<%= restaurant._id %>/events" method="POST">
  <select name="eventId">
    <%- events.map(p => 
      `<option value="${p._id}">${p.name}</option>`
    ).join('') %>
  </select>
  <button type="submit">Add to Cast</button>
</form>

<br><br><h2>Reviews</h2>
<form id="add-review-form" method="POST"
  action="/restaurants/<%= restaurant._id %>/reviews">
  <label>Review:</label>
  <textarea name="content"></textarea>
  <label>Rating:</label>
  <select name="rating">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5" selected>5</option>
  </select>
  <input type="submit" value="Add Review">
</form>

<% if (restaurant.reviews.length) { %>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
        <th>Review</th>
        <th>Rating</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% let total = 0 %>
      <% restaurant.reviews.forEach(function(e) { %>
        <% total += r.rating %>
        <tr>
          <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer" ><%= r.userName %></td>
          <td><%= e.createdAt.toLocaleDateString() %></td>
          <td><%= e.content %></td>
          <td><%= e.rating %></td>
          <td>
            <% if (user?._id.equals(r.user)) { %>
              <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                <button type="submit">X</button>
              </form>
            <% } %>
          </td>
        </tr>
      <% }); %>
      <tr>
        <td colspan="3"></td>
        <td><strong><%= (total / restaurant.reviews.length).toFixed(1) %></strong></td>
      </tr>
    </tbody>
  </table>
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>
  
<%- include('../partials/footer') %>
